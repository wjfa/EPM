<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:layout_marginTop="20dp"
    android:background="@drawable/user_shape">


    <ImageView
        android:layout_width="0dp"
        android:layout_height="130dp"
        android:src="@drawable/icon_3d"
        android:id="@+id/img_device_kiting"
        android:layout_weight="1"
        android:layout_marginTop="8dp"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="3"
        android:layout_marginTop="8dp">

        <LinearLayout
            android:id="@+id/line_device1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:text="制作订单编号："
                android:textSize="16sp"
                android:layout_width="115dp"
                android:layout_height="wrap_content"
                android:id="@+id/tv_device_number"
                android:layout_weight="1"
                android:gravity="right"
                android:layout_marginLeft="5dp"/>
            <TextView
                android:text="M20161108_001"
                android:textSize="16sp"
                android:textColor="#398BFB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_show_create"
                android:layout_weight="1"
                android:layout_marginLeft="15dp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/line_device2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp">
            <TextView
                android:text="打印时间："
                android:textSize="16sp"
                android:layout_width="115dp"
                android:layout_height="wrap_content"
                android:id="@+id/tv_device_print_time"
                android:layout_weight="1"
                android:gravity="right"
                android:layout_marginLeft="5dp"/>
            <TextView
                android:text="15:57:35"
                android:textSize="16sp"
                android:textColor="#398BFB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_show_print_time"
                android:layout_weight="1"
                android:layout_marginLeft="15dp"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/line_device3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp">
            <TextView
                android:text="剩余时间："
                android:textSize="16sp"
                android:layout_width="115dp"
                android:layout_height="wrap_content"
                android:id="@+id/tv_device_free_time"
                android:layout_weight="1"
                android:gravity="right"
                android:layout_marginLeft="5dp"/>
            <TextView
                android:text="15:57:35"
                android:textSize="16sp"
                android:textColor="#398BFB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_show_free_time"
                android:layout_weight="1"
                android:layout_marginLeft="15dp"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/line_device4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp">
            <TextView
                android:text="总高度："
                android:textSize="16sp"
                android:layout_width="115dp"
                android:layout_height="wrap_content"
                android:id="@+id/tv_device_height"
                android:layout_weight="1"
                android:gravity="right"
                android:layout_marginLeft="5dp"/>
            <TextView
                android:text="300"
                android:textSize="16sp"
                android:textColor="#398BFB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_show_height"
                android:layout_weight="1"
                android:layout_marginLeft="15dp"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/line_device5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp">
            <TextView
                android:text="打印高度："
                android:textSize="16sp"
                android:layout_width="115dp"
                android:layout_height="wrap_content"
                android:id="@+id/tv_device_print_height"
                android:layout_weight="1"
                android:gravity="right"
                android:layout_marginLeft="5dp"/>
            <TextView
                android:text="59"
                android:textSize="16sp"
                android:textColor="#398BFB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_show_print_height"
                android:layout_weight="1"
                android:layout_marginLeft="15dp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/line_device6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp">
            <TextView
                android:text="功率："
                android:textSize="16sp"
                android:layout_width="115dp"
                android:layout_height="wrap_content"
                android:id="@+id/tv_device_power"
                android:layout_weight="1"
                android:gravity="right"
                android:layout_marginLeft="5dp"/>
            <TextView
                android:text="68"
                android:textSize="16sp"
                android:textColor="#398BFB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_show_power"
                android:layout_weight="1"
                android:layout_marginLeft="15dp"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/line_device7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp">
            <TextView
                android:text="液位："
                android:textSize="16sp"
                android:layout_width="115dp"
                android:layout_height="wrap_content"
                android:id="@+id/tv_device_level"
                android:layout_weight="1"
                android:gravity="right"
                android:layout_marginLeft="5dp"/>
            <TextView
                android:text="68"
                android:textSize="16sp"
                android:textColor="#398BFB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_show_level"
                android:layout_weight="1"
                android:layout_marginLeft="15dp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/line_device8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp">
            <TextView
                android:text="XPos："
                android:textSize="16sp"
                android:layout_width="115dp"
                android:layout_height="wrap_content"
                android:id="@+id/tv_device_XPos"
                android:layout_weight="1"
                android:gravity="right"
                android:layout_marginLeft="5dp"/>
            <TextView
                android:text=""
                android:textSize="16sp"
                android:textColor="#398BFB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_show_XPos"
                android:layout_weight="1"
                android:layout_marginLeft="15dp"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/line_device9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp">
            <TextView
                android:text="ZPos："
                android:textSize="16sp"
                android:layout_width="115dp"
                android:layout_height="wrap_content"
                android:id="@+id/tv_device_ZPos"
                android:layout_weight="1"
                android:gravity="right"
                android:layout_marginLeft="5dp"/>
            <TextView
                android:text=""
                android:textSize="16sp"
                android:textColor="#398BFB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_show_ZPos"
                android:layout_weight="1"
                android:layout_marginLeft="15dp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/line_device10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp">
            <TextView
                android:text="LPos："
                android:textSize="16sp"
                android:layout_width="115dp"
                android:layout_height="wrap_content"
                android:id="@+id/tv_device_LPos"
                android:layout_weight="1"
                android:gravity="right"
                android:layout_marginLeft="5dp"/>
            <TextView
                android:text=""
                android:textSize="16sp"
                android:textColor="#398BFB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_show_LPos"
                android:layout_weight="1"
                android:layout_marginLeft="15dp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/line_device11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp">
            <TextView
                android:text="记录操作时间："
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_device_oper_time"
                android:layout_weight="1"
                android:gravity="right"
                android:layout_marginLeft="8dp"/>
            <TextView
                android:text="2016-11-08 15:57:35"
                android:textSize="16sp"
                android:textColor="#398BFB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_show_oper_time"
                android:layout_weight="1"
                android:layout_marginLeft="15dp"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
